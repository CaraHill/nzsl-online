= form_tag vocab_sheet_path, method: :put, class: 'clearfix_left vocab_sheet_name' do
  .vocab_sheet_name
    = text_field_tag "vocab_sheet[name]",
      (@sheet.name.present? ? sheet_name : t('vocab_sheet.name')),
      class: 'vocab_sheet_name text_input'
    = hidden_field_tag "vocab_sheet[old_name]",
      (sheet_name.present? ? sheet_name : t('vocab_sheet.name')),
      class: 'old_name'
  = link_button('vocab_sheet.change')
